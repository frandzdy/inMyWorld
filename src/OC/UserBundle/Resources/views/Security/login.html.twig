{# src/OC/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
  Login - {{ parent() }}
{% endblock %}

{% block body %}

  {# S'il y a une erreur, on l'affiche dans un joli cadre #}
  {% if error %}
    <div class="alert alert-danger">{{ error.message|trans }}</div>
  {% endif %}
<div class="well col-md-6 pull-right" >
  	{# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
	<form action="{{ path('fos_user_security_check') }}" method="post" >
		<div class="form-group">
	    	<div class="col-sm-6 col-md-6 control-label"><label for="username">Nom d'utilisateur :</label></div>
	    	<div class="col-sm-6 col-md-6"><input class="form-control" style="max-width:350px" type="text" id="username" name="_username" value="{{ last_username }}" /></div>
		</div>
		<div class="form-group">
	    	<div class="col-sm-6 col-md-6 control-label"><label for="password">Mot de passe :</label></div>
	    	<div class="col-sm-6 col-md-6"><input class="form-control" style="max-width:350px" type="password" id="password" name="_password" /></div>
    	</div>
    	<div class="form-group">
	    	<div class="col-sm-6 col-md-6 control-label"><label for="password">Se souvenir de moi :</label></div>
	    	<div class="col-sm-6 col-md-6"> <input class="form-control" style="max-width:10px" type="checkbox" id="remember_me" name="_remember_me" checked /></div>
    	</div>
    	<div class="form-group pull-right">
	    	<div class="col-sm-12 col-md-12 control-label"><a href="{{ path('oc_platform_addUser') }}">Vous n'avez pas de compte ?? inscrivez-vous ici</a></label></div>
    	</div>
    	<input class="btn btn-primary"type="submit" value="Connexion" />
  	</form>
</div>
{% endblock %}